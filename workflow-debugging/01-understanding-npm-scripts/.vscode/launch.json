    {
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "nodemon debug fixed",
                "runtimeExecutable": "nodemon",
                "runtimeArgs": [
                    "--inspect",
                    "app.js"
                ],
                "program": "",  // override program so it doesn't interfere
                "restart": true,
                "console": "integratedTerminal",
                "internalConsoleOptions": "neverOpen",
                "skipFiles": ["<node_internals>/**"]
            }
        ]
    }

